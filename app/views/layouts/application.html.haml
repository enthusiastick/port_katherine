!!! 5
%html{ lang: "en"}
  %head
    %meta{ charset: "utf-8" }

    %meta{ name: "description", content: content_for?(:description) ? yield(:description) : "Port Katherine is an ongoing aetherpunk live-action role-playing game (LARP) that runs in New England" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }

    %title= content_for?(:title) ? yield(:title) : "Port Katherine"
    = csrf_meta_tags

    = render "application/favicon"
    = stylesheet_link_tag "application", media: "all"
    = stylesheet_pack_tag "styles"
    %script{src: "https://maps.googleapis.com/maps/api/js?key=#{ENV['GMAPS_API_KEY']}"}
    = javascript_include_tag "application"
    = javascript_pack_tag "application"
  %body
    = yield

